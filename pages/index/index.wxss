/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.item_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
}

.select_icon {
  width: 40rpx;
  height: 40rpx;
}

.text {
  margin-left: 30rpx;
}

view {
  display: block;
}

.selectBox {
  border: 1px solid rgb(226, 10, 10);
  max-width: 400px;
  display: block;
}

.selectBox view {
  display: none;
}

.selectBox text {
  display: block;
  text-decoration: none;
  color: #666;
  border-bottom: 1px solid #aaa;
  padding: 10px 10px;
  padding-left: 10px;
}

.selectBox text input {
  float: right;
  margin-top: 5px;
}

.selectBox>text {
  padding-left: 10px;
}

.selectBox>view>text {
  padding-left: 30px;
}

.selectBox>view>view>text {
  padding-left: 60px;
}
